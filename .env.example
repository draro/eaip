# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/eaip

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# Email Configuration (for notifications and invites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# AI Providers (Optional - can also be configured per organization)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Git Integration
GIT_STORAGE_PATH=./git-repos
# Optional: Remote Git server for backup/sync
# GIT_REMOTE_URL=git@github.com:your-org/eaip-repos.git
# GIT_REMOTE_USER=git
# GIT_REMOTE_KEY_PATH=/path/to/ssh/key

# Remote Storage (S3, Azure, etc.) - Optional
# REMOTE_STORAGE_PROVIDER=s3
# REMOTE_STORAGE_BUCKET=eaip-documents
# REMOTE_STORAGE_REGION=us-east-1
# REMOTE_STORAGE_ACCESS_KEY=your-access-key
# REMOTE_STORAGE_SECRET_KEY=your-secret-key

# Webhook URLs (Optional - for integrations)
# WEBHOOK_URL=https://your-webhook-endpoint.com/eaip
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/eaip

# Feature Flags
ENABLE_PUBLIC_ACCESS=true
ENABLE_AI_FEATURES=true
ENABLE_GIT_VERSIONING=true

# System Configuration
MAX_UPLOAD_SIZE=10485760
# 10MB in bytes
SESSION_TIMEOUT=3600
# 1 hour in seconds

# Logging
LOG_LEVEL=info
# options: error, warn, info, debug
