# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eaip?retryWrites=true&w=majority

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# AI Provider Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# n8n Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance/webhook/eaip
N8N_EMAIL_TEST_WEBHOOK=https://your-n8n-instance/webhook/email-password
N8N_EMAIL_WEBHOOK=https://your-n8n-instance/webhook/email-password
N8N_EMAIL_TEST_MODE=false

# Domain Configuration
EAIP_TARGET_IP=your-server-ip

# Git Storage
GIT_STORAGE_PATH=./git-repos

# Google Cloud Storage Configuration
# Project ID for your GCS project
GCS_PROJECT_ID=your-gcs-project-id

# Bucket name where files will be stored
GCS_BUCKET_NAME=your-bucket-name

# Option 1: JSON credentials (recommended for production)
# Paste the entire JSON key file contents as a single line
GCS_CREDENTIALS_JSON=

# Option 2: Path to key file (for local development)
# GCS_KEY_FILE=/path/to/service-account-key.json

# Node Environment
NODE_ENV=development
